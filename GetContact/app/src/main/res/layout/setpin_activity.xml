<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setpinLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetPinActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/background"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="303dp"
        android:layout_height="335dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:backgroundTint="#ffff"
        android:elevation="20dp"
        app:cardCornerRadius="15dp">


        <RelativeLayout
            android:layout_width="296dp"
            android:layout_height="376dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="153dp"
                android:layout_height="146dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/todo"
                android:scaleType="fitStart"
                android:src="@drawable/password" />

            <EditText
                android:id="@+id/pin"
                android:layout_width="275dp"
                android:layout_height="58dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="132dp"
                android:layout_marginStart="13dp"
                android:drawableStart="@drawable/lock1"
                android:ems="10"
                android:hint="@string/enter_your_pin"
                android:inputType="number"
                android:textColor="@color/colorAccent" />

            <EditText
                android:id="@+id/c_pin"
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="70dp"
                android:layout_marginStart="12dp"
                android:drawableStart="@drawable/con_icon"
                android:ems="10"
                android:hint="@string/confirm_your_pin"
                android:inputType="number"
                android:textColor="@color/colorAccent" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn__setpin"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:background="#800080"
        android:elevation="10dp"
        android:onClick="savePin"
        android:text="@string/set_pin"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="92dp"
        android:text="Set a four digit PIN"
        android:textAlignment="center"
        android:textColor="#f6efef"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>