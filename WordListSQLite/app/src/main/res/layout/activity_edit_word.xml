<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/liner_layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditWordActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="Enter a word..."
        android:inputType="text|textAutoComplete|textPersonName"
        android:padding="8dp"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editText_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="Some description..."
        android:inputType="text|textAutoCorrect|textMultiLine|textPersonName"
        android:padding="8dp"
        android:selectAllOnFocus="true"
        android:singleLine="false" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        android:onClick="returnReply"
        android:text="Save Word"
        android:textColor="@android:color/background_light" />
</LinearLayout>